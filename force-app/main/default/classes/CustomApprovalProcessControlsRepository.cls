public with sharing class CustomApprovalProcessControlsRepository {
    public static String getCurrentUserProfile() {
        Id profileId = Userinfo.getProfileId();
        Profile userprofile = [SELECT Id,Name from Profile where Id=:profileId];
        return userprofile.Name;
    }

    public static List<User> getUsersById (Set<Id> userIds) {
        return [SELECT Id, Name From USER WHERE Id IN: userIds];
    }

    public static Map<Id, User> getUsersMapByIds (Set<Id> userIds) {
        Map<Id, User> userMap = new Map<Id, User>([
            SELECT Name
            FROM User
            WHERE Id IN: userIds
        ]);
        return userMap;
    }

    public static List<ProcessInstanceWorkitem> getApprovals(Id recordId) {
        List<ProcessInstanceWorkitem> workItems = [SELECT Id, ActorId, Actor.Name, OriginalActorId, OriginalActor.Name, ProcessInstanceId FROM ProcessInstanceWorkitem
                                                    WHERE ProcessInstance.TargetObjectId = :recordId];
        return workItems;
    }

    public static Map<Id, ProcessInstanceWorkitem> getApprovalsMap(Set<String> recordIds) {
        Map<Id, ProcessInstanceWorkitem> approvalsMap = new Map<Id, ProcessInstanceWorkitem>([
            SELECT Id, ActorId, Actor.Name, OriginalActorId, OriginalActor.Name, ProcessInstanceId, ProcessInstance.TargetObjectId
            FROM ProcessInstanceWorkitem
            WHERE Id IN :recordIds
        ]);
        return approvalsMap;
    }

    public static List<ApprovalMatrix__c> getApprovalMAtrixRulesWhereUserIsOCSupplyChain (Id userId) {
        return [SELECT Id, Name FROM ApprovalMatrix__c WHERE ApprovalStep__c = '1' AND 
                    ProjectClassification__c includes ('Geographical Extension') AND Approver__c = :userId  
                    AND ApproverRole__c = 'OC Supply Chain']; 
    }

    public static Map<Id, ApprovalMatrix__c> getApprovalMatrixByApproverIds (Set<Id> userIds) {
        Map<Id, ApprovalMatrix__c> approvalMatrixMap = new Map<Id, ApprovalMatrix__c>([
            SELECT ApproverRole__c, Approver__c, Approver__r.Name
            FROM ApprovalMatrix__c
            WHERE  Approver__c IN: userIds
        ]);
        return approvalMatrixMap;
    }

    public static ProcessInstanceWorkitem[] getPendingApprovalsForProject (Id projectId) {
        return [SELECT Id FROM ProcessInstanceWorkItem WHERE ProcessInstance.TargetObjectId = :projectId AND ProcessInstance.Status = 'Pending']; 
    }

    public static Project__c getProject(Id recordId) {
        return [SELECT id, Name, approvalStepName__c, DecisionStep__c, ApprovalReassignmentComment__c, ApprovalProcessStatus__c,
                ProjectClassification__c, ProjectPhase__c, SubmissionStatus__c, ProjectClassificationSubtype__c, ProjectLeader__c, ProjectManager__c
                ,ProjectNumberFormula__c, ProjectManagerFormula__c, ProjectLeaderFormula__c
                 from project__c where id = :recordId limit 1];
    }
