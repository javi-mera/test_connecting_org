public with sharing class LeadRegionNotificationService {
    private static final String GTR_REGION = 'GTR';
    private static final String ALL_REGIONS = 'ALL Regions';
    private static final String AMEA_REGION = 'AMEA';

    /**
     * @param project - New Triggered Project
     * @param oldProject - Old Triggered Project
     * @param isMilestoneChangedEmail - Boolean is true if it's automatic approval milestone
     * @description Sends an email to Regional Leaders each time the Project is submitted or passed the milestone.
     **/
    public static void sendEmailToLeadRegion(Project__c project, Project__c oldProject, Boolean isMilestoneChangedEmail) {
        Map<String, LeadRegionEmail__mdt> emailsMeta = LeadRegionEmail__mdt.getAll();

        List<String> emails = new List<String>();
        for (LeadRegionEmail__mdt emailMeta : emailsMeta.values()) {
            if (emailMeta.LeadRegion__c == InnovatorConstants.ECOMMERCE_TRADE_TYPE && String.isNotBlank(project.TradeType__c) && project.TradeType__c.contains(InnovatorConstants.ECOMMERCE_TRADE_TYPE)){
                emails.add(emailMeta.LeadRegionEmail__c);
            }

            if (emailMeta.LeadRegion__c == ALL_REGIONS && String.isNotBlank(emailMeta.Project_Classification_Filter__c) &&
                emailMeta.Project_Classification_Filter__c.contains(project.ProjectClassification__c)) {
                emails.add(emailMeta.LeadRegionEmail__c);
            }

            if (emailMeta.LeadRegion__c == project.Region__c && String.isNotBlank(emailMeta.Hub__c) && emailMeta.Hub__c.contains(project.Hub__c)){
                emails.add(emailMeta.LeadRegionEmail__c);
            } else if (emailMeta.LeadRegion__c == GTR_REGION && String.isNotBlank(project.Region__c) && project.Region__c.contains(GTR_REGION)) {
                emails.add(emailMeta.LeadRegionEmail__c);
            } else if (emailMeta.LeadRegion__c == project.Region__c && project.Region__c == AMEA_REGION) {
                emails.add(emailMeta.LeadRegionEmail__c);
            }

            if (String.isNotBlank(project.AddAdditionalRegionOrRegions__c)) {
                for (String additionalRegion : project.AddAdditionalRegionOrRegions__c.split(';')) {
                    for (String additionalHub : project.AddAdditionalHubOrHubs__c.split(';')) {
                        if (emailMeta.LeadRegion__c == additionalRegion && String.isNotBlank(emailMeta.Hub__c) && emailMeta.Hub__c.contains(additionalHub)) {
                            emails.add(emailMeta.LeadRegionEmail__c);
                        }
                    }
                    if (emailMeta.LeadRegion__c == AMEA_REGION && additionalRegion == AMEA_REGION) {
                        emails.add(emailMeta.LeadRegionEmail__c);
                    }
                }
                if (project.AddAdditionalRegionOrRegions__c.contains(GTR_REGION) && emailMeta.LeadRegion__c == GTR_REGION) {
                    emails.add(emailMeta.LeadRegionEmail__c);
                }
            }
        }

        if(!(emails.isEmpty())){
            EmailManager.sendEmailToRegionalLeaders(project, oldProject, emails, isMilestoneChangedEmail);
        }
    }

